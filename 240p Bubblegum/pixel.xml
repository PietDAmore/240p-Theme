<theme>
    <formatVersion>4</formatVersion>

    <feature supported="carousel">
         <view name="system">
            <carousel name="systemcarousel">
               <type>horizontal</type>
               <color>14141488</color>
               <pos>0 0.4</pos>
            </carousel>

            <text name="systemInfo">
               <pos>0.32 0.055</pos>
               <color>c4c4c4</color>
               <fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
               <fontSize>0.0345</fontSize>
            </text>

            <image name="system-border" extra="true">
               <origin>0.5 0</origin>
               <pos>0.5 0.60</pos>
               <size>0.25 0.83</size>
               <path>./_inc/images/space.png</path>
               <color>666666</color>
            </image>

            <text name="logoText">
               <color>333333</color>
               <fontSize>0.0028</fontSize>
               <forceUppercase>true</forceUppercase>
            </text>
         </view>
    </feature>

	<view name="system">

      <image name="bottom" extra="true">
  			<color>000000</color>
  		</image>

  		<image name="bottom-highlight" extra="true">
  			<color>3D3D3D</color>
  		</image>

      <image name="background_color" extra="true">
        <path>./_inc/images/border-system.png</path>
        <origin>0 0</origin>
        <pos>0 0</pos>
        <size>1 1</size>
        <color>d4d4d4</color>
      </image>

      <image name="background_pattern" extra="true">
        <path>./_inc/images/wallpaper.png</path>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.5</pos>
        <size>1 1</size>
        <color>aeaeae</color>
        <tile>true</tile>
      </image>

      <image name="background_help" extra="true">
        <origin>0 1</origin>
        <pos>-0.4 1</pos>
        <size>1 0.070</size>
        <color>FFFFFF99</color>
      </image>

      <image name="logo">
  			<path>./logo.png</path>
      </image>

      <helpsystem name="help">
        <!-- help bottom -->
        <textColor>FFFFFF</textColor>
        <iconColor>FFFFFF</iconColor>
        <fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
        <fontSize>0.0345</fontSize>
      </helpsystem>

        <image name="carousel">
          <color>FFFFFF</color>
        </image>

	</view>

  <view name="basic">

    <image name="Border Overlay" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./_inc/images/border_basic.png</path>
		</image>

    <helpsystem name="help">
			<pos>0.012 1.960</pos>
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
			<fontSize>0.033</fontSize>
		</helpsystem>

		<text name="md_lbl_playcount">
			<pos>0.676 0.580</pos>
			<fontSize>0.03</fontSize>
		</text>

		<text name="md_playcount">
			<pos>0.829 0.574</pos>
			<fontSize>0.03</fontSize>
		</text>

		<textlist name="gamelist">
			<pos>0.034 0.236</pos>
			<size>0.933 0.647</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
      <fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
			<fontSize>0.037</fontSize>
      <selectorColor>00000099</selectorColor>
      <selectedColor>e15c94</selectedColor>
      <primaryColor>ffffff</primaryColor>
      <secondaryColor>c3c3c3</secondaryColor>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./_inc/sound/menu.wav</scrollSound>
		</textlist>

	</view>

	<view name="detailed">
	    <helpsystem name="help">
			<pos>0.012 1.960</pos>
			<textColor>42ff00</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</helpsystem>

    <image name="logo">
			<path>./logo.png</path>
			<pos>0.78 0.12</pos>
			<maxSize>0.418 0.115</maxSize>
			<origin>0.5 0.5</origin>
		</image>

    <image name="background" extra="true">
      <tile>false</tile>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <path>./_inc/images/wallpaper_systems.png</path>
    </image>

    <image name="Border Overlay" extra="true">
      <tile>false</tile>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <path>./_inc/images/border.png</path>
    </image>

		<image name="md_image">
			<pos>0.78 0.45</pos>
			<maxSize>0.3 84 0.322</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<textlist name="gamelist">
      <pos>0.033 0.07</pos>
			<size>0.53 0.872</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
			<fontSize>0.0345</fontSize>
      <selectorColor>000000</selectorColor>
      <selectedColor>e15c94</selectedColor>
      <primaryColor>ffffff</primaryColor>
      <secondaryColor>c3c3c3</secondaryColor>
      <forceUppercase>1</forceUppercase>
			<scrollSound>./_inc/sound/menu.wav</scrollSound>
		</textlist>

<!--         Start Meta Data                  -->

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_players, md_players, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_genre, md_genre, md_lbl_players, md_players, md_lbl_playcount, md_playcount, md_lbl_lastplayed, md_description, md_lastplayed">
			<pos>1 1</pos>
			<size>0.192 0.030</size>
			<color>cccccc</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</text>

		<datetime name="md_releasedate">
			<color>ffffff</color>
			<pos>0.61 0.750</pos>
			<color>cccccc</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_inc/fonts/pixelmix.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</datetime>

		<text name="md_developer">
			<pos>0.61 0.809</pos>
      <size>0.182 0.020</size>
		</text>

		<text name="md_genre">
			<pos>0.61 0.853</pos>
		</text>

		<datetime name="md_lastplayed">
			<pos>0.61 0.9</pos>
      <size>0.182 0.020</size>
      <!--
			<fontSize>0.035</fontSize>
      -->
		</datetime>

		<text name="md_lbl_players">
			<pos>0.82 0.764</pos>
      <forceUppercase>0</forceUppercase>
      <fontSize>0.03</fontSize>
		</text>

		<text name="md_players">
			<pos>0.96 0.763</pos>
      <color>e15c94</color>
		</text>

		<text name="md_publisher">
			<pos>0.82 0.808</pos>
      <size>0.162 0.020</size>
		</text>

		<rating name="md_rating">
			<pos>0.82 0.853</pos>
			<size>0.192 0.030</size>
			<filledPath>./_inc/images/star_filled.svg</filledPath>
			<unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
		</rating>

		<text name="md_playcount">
			<pos>0.828 0.895</pos>
      <color>e15c94</color>
		</text>

	</view>

	<view name="basic, detailed">

	</view>

	</theme>
