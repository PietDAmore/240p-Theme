<theme>
    <formatVersion>4</formatVersion>
    <include>./../pixel.xml</include>

	<view name="system">

    <image name="console_overlay" extra="true">
      <tile>false</tile>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <maxSize>1 1</maxSize>
      <path>./wallpaper.png</path>
    </image>

		<image name="logo">
			<path>./system.svg</path>
    </image>

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>

	</view>

	<view name="basic, detailed">
	</view>

  <view name="basic">


    <image name="logo">
			<path>./system.svg</path>
			<pos>0.5 0.14</pos>
			<maxSize>0.5 0.5</maxSize>
			<origin>0.5 0.5</origin>
		</image>


		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0.05 0.16</pos>
			<origin>0 0</origin>
			<size>0.9 0.9</size>
			<color>555555</color>
			<path>./wallpaper.png</path>
		</image>

  </view>

	<view name="detailed">

		<image name="logo">
			<path>./system.svg</path>
			<pos>0.78 0.12</pos>
			<maxSize>0.300 0.100</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

</theme>
